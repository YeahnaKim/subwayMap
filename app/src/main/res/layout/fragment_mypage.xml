<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/r_mypage">

    <!-- 로그인 영역 -->

    <!-- 카테고리별 설정 텍스트 -->
    <LinearLayout
        android:id="@+id/loginArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/연보라"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="로그인"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/categorySettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginArea"
        android:layout_marginTop="330dp"
        android:text="카테고리별 설정"

        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_below="@id/loginArea">

        <!-- 즐겨찾기  -->
        <LinearLayout
            android:id="@+id/favorites"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@color/찐보라"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star" />

        </LinearLayout>

        <!-- 알림설정  -->

        <!-- 타임로그  -->
        <LinearLayout
            android:id="@+id/notice"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/찐보라"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notice" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timelog"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@color/찐보라"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/time" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>